<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NameAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#006400</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MessageAppearance" parent="@android:style/TextAppearance">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">normal</item>
    </style>

    <style name="DateAppearance" parent="@android:style/TextAppearance">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">normal</item>
    </style>

    <style name="DefMessageAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    </resources>
